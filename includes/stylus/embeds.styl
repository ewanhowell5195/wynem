:host
  --color-discord-ping: #414675
  --color-discord-ping-hover: #5865F2
  --color-discord-ping-text: #C2E2FD
  --color-discord-text: #DBDEE1
  --color-discord-text-light: #F2F3F5
  --color-discord-button: #4E5058
  --color-discord-button-hover: #6D6F78
  --color-discord-button-active: #80848E
  --color-discord-button-blue: #5865F2
  --color-discord-button-blue-hover: #4752C4
  --color-discord-button-blue-active: #3C45A5
  --color-discord-button-green: #248046
  --color-discord-button-green-hover: #1A6334
  --color-discord-button-green-active: #15562B
  --color-discord-button-red: #DA373C
  --color-discord-button-red-hover: #A12828
  --color-discord-button-red-active: #8F2022

.embed-container 
  max-width: calc(100vw - 80px)
  margin-bottom: 24px

  > div:last-child
    display: flex
    gap: 16px
    
  code
    padding: 1.38px
    margin: -2.38px 0
    font-family: var(--font-code)
    font-size: 11.9px
    border-radius: 3px
    background-color: var(--color-grey)

.message-container
  margin-bottom: 0

.message
  margin-top: 4px
  color: var(--color-discord-text)

.reply-container
  display: flex
  gap: 4px
  align-items: center
  font-size: 14px
  margin: 0 0 10px 60px
  user-select: none
  
  img
    width: 16px
    height: 16px
    border-radius: 50%
      
  div:nth-child(2)
    position: relative
  
    &::before
      content: ""
      border-left: 2px solid var(--color-grey-lighter)
      border-top-left-radius: 6px
      border-top: 2px solid var(--color-grey-lighter)
      width: 33px
      height: 12px
      position: absolute
      transform: translate(calc(-100% - 24px), 6px)
    
    &:hover
      text-decoration: underline
    
  div:last-child
    color: #B5BAC1
    
    &:hover
      color: var(--color-text-white)

.pfp-container > img
  width: 40px
  border-radius: 50%
  cursor: pointer
  user-select: none
  
  &:hover
    filter: drop-shadow(0px 4px 4px #00000028)
  
  &:active
    transform: translateY(1px)
    
  &.outline
    border: 2px solid #2B2B2E

.embed-content
  display: flex
  flex-direction: column
  align-items: flex-start

.name-row
  display: flex
  gap: 5px

.name
  color: var(--color-blue)
  cursor: pointer
  
  &:hover
    text-decoration: underline
  
.tag
  background-color: var(--color-blue)
  display: flex
  font-size: 10px
  fill: var(--color-text-white)
  align-items: center
  padding-right: 4px
  border-radius: 3px
  height: 16px
  
  > svg
    width: 15px
    height: 15px

  > div
    scale: 1 1.1
    
.embed
  padding: 8px 16px 16px 12px
  background-color: var(--color-grey-lighter)
  margin-top: 4px
  border-radius: 4px
  border-left: 4px solid var(--color-blue)
  font-size: 14px
  color: var(--color-discord-text)
  max-width: 484px
  box-shadow: var(--box-shadow)
  
  *
    white-space: pre-wrap
    overflow-wrap: anywhere
    line-height: 1.25em
  
  > div:first-child
    display: flex
    gap: 16px
    justify-content: space-between
    
.warning
  border-left: 4px solid #DD2E44
  
.embed-title
  font-size: 16px
  margin-top: 8px
  font-weight: 600
  color: var(--color-text-white)
  padding: 2px 0
  display: block
  
  a&
    color: var(--color-blue-light)
    text-decoration: none
    
    &:hover
      text-decoration: underline
  
  code
    font-size: 13.6px
    margin: -2.72px 0
    padding: 2.72px

.embed-description
  margin-top: 8px
  padding: 1px 0

.embed-buttons
  margin-top: 8px
  display: flex
  gap: 8px
  flex-wrap: wrap

.embed-button
  background-color: var(--color-discord-button)
  border-radius: 3px
  display: flex
  align-items: center
  padding: 8px 20px
  gap: 4px
  transition: background-color .17s
  user-select: none
  cursor: pointer
  min-height: 16px
  font-size: 14px
  color: var(--color-text-white)
  text-decoration: none
  box-shadow: var(--box-shadow)
  overflow-wrap: anywhere
  text-align: center
  
  &:hover
    background-color: var(--color-discord-button-hover)
    
  &:active
    background-color: var(--color-discord-button-active)
    
  > img
    width: 19.25px
    height: 19.25px
    
  > svg
    width: 16px
    height: 16px
    fill: var(--color-text-white)
    margin-left: 4px

.embed-button-blue
  background-color: var(--color-discord-button-blue)
  
  &:hover
    background-color: var(--color-discord-button-blue-hover)
    
  &:active
    background-color: var(--color-discord-button-blue-active)
    
.embed-button-green
  background-color: var(--color-discord-button-green)
  
  &:hover
    background-color: var(--color-discord-button-green-hover)
    
  &:active
    background-color: var(--color-discord-button-green-active)
    
.embed-button-red
  background-color: var(--color-discord-button-red)
  
  &:hover
    background-color: var(--color-discord-button-red-hover)
    
  &:active
    background-color: var(--color-discord-button-red-active)

.embed-fields
  display: flex
  gap: 8px
  flex-wrap: wrap
  margin-top: 12px

  > div
    flex-grow: 1

.embed-field-name
  font-weight: 600
  color: var(--color-text-white)
  padding: 1px 0
  margin-bottom: 4px
  
.embed-field-value
  padding: 1px 0
  
.embed-author
  margin-top: 8px
  font-size: 14px
  padding: 1px 0
  display: flex
  align-items: center
  gap: 8px
  color: var(--color-text-white)
  font-weight: 600
  
  img
    width: 24px
    height: 24px
    border-radius: 50%

.embed-footer
  margin-top: 8px
  font-size: 12px
  padding: 1px 0
  display: flex
  align-items: center
  gap: 8px
  
  img
    width: 20px
    height: 20px
    border-radius: 50%
  
.embed-image
  border-radius: 4px
  margin-top: 16px
  max-width: @css { min(400px, 100vw - 172px) }
  max-height: 300px
  cursor: pointer
  
.embed-thumbnail
  border-radius: 4px
  margin-top: 8px
  max-width: 80px
  max-height: 80px
  cursor: pointer
  
.ping
  background-color: var(--color-discord-ping)
  border-radius: 3px
  padding: 2px
  color: var(--color-discord-ping-text) !important
  cursor: pointer
  transition: background-color .05s, color .05s
  user-select: none
  text-decoration: none
  
  &:hover
    background-color: var(--color-discord-ping-hover)
    color: var(--color-text-white) !important
    
.emoji
  width: 18px
  height: 18px
  margin-bottom: -3px
  
.timestamp
  padding 0 2px
  border-radius: 3px
  background-color: #4F515A
  
.listbar
  background-color: #4E5058
  height: 18px
  width: 4px
  border-radius: 4px
  display: inline-block
  margin: 0 12px -4px 0
  
.modal-container
  border-radius: 5px
  background-color: var(--color-grey-lighter)
  max-width: 440px
  user-select: none
  overflow: hidden
  box-shadow: var(--box-shadow)
  margin-bottom: 24px
  
.modal-top
  padding: 16px 16px 32px 16px
  display: flex
  position: relative
  gap: 8px
  align-items: center
  
  > img
    width: 24px
    height: 24px
    border-radius: 50%
  
  > div
    font-size: 24px
    color: var(--color-discord-text-light)
    margin-right: 28px

  > svg
    position: absolute
    width: 28px
    height: 28px
    top: 16px
    right: 16px
    fill: var(--color-secondary)
    cursor: pointer
    transition: fill .2s ease-in-out
    
    &:hover
      fill: var(--color-discord-text-light)
      
.modal-bottom
  padding: 16px
  display: flex
  justify-content: flex-end
  background-color: var(--color-grey-light)
  
  > div
    width: 96px
    height: 38px
    display: flex
    justify-content: center
    align-items: center
    font-size: 14px
    cursor: pointer
    
.modal-submit
  transition: background-color .17s
  border-radius: 3px
  background-color: var(--color-discord-button-blue)
  
  &:hover
    background-color: var(--color-discord-button-blue-hover)
    
  &:active
    background-color: var(--color-discord-button-blue-active)
    
.modal-close:hover
  text-decoration: underline
  
.modal
  padding: 0 16px
  
.modal-row
  margin-bottom: 16px
  
.modal-row-title
  font-size: 12px
  text-transform: uppercase
  font-weight: 700
  color: var(--color-discord-text)
  margin-bottom: 8px
  
  > span
    color: var(--color-discord-button-red)
    filter: brightness(1.25)

.modal-row-input-container
  position: relative
  
  > div
    position: absolute
    bottom: 12px
    right: 14px
    pointer-events: none
    font-family: var(--font-code)
    font-size: 12px
    color: var(--color-secondary)

.modal-row-input
  background-color: var(--color-grey)
  border-radius: 3px
  padding: 10px
  font-size: 15px
  width: 100%
  border: none
  outline: none
  box-sizing: border-box
  
  &::placeholder
    color: var(--color-secondary)
    letter-spacing: -0.2px
    
  &.long
    resize: none
    padding-right: 32px
    font-family: var(--font)

    &::-webkit-scrollbar
      border: none
      background: none
      width: 14px
      height: 14px
      
    &::-webkit-scrollbar-thumb
      background-color: var(--color-grey-dark)
    
    &::-webkit-scrollbar-thumb, &::-webkit-scrollbar-track
      border-radius: 7px
      background-clip: padding-box
      border: 3px solid transparent
      
    &::-webkit-scrollbar-track
      background-color: var(--color-grey-light)
      
.codeblock
  font-family: var(--font-code)
  background-color: var(--color-grey)
  padding: 10px
  border-radius: 5px
  margin-top: 6px
  
.embed a
  text-decoration: none
  
  &:hover
    text-decoration: underline
    
.text-content
  margin-top: 5px
  
  .emoji
    width: 22px
    height: 22px