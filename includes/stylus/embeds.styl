.embed-container 
  max-width: calc(100vw - 80px)

  > div:last-child
    display: flex
    gap: 16px
    
  code
    padding: 2.38px
    margin: -2.38px 0
    font-family: var(--font-code)
    font-size: 11.9px
    border-radius: 3px
    background-color: var(--color-grey)

.reply-container
  display: flex
  gap: 4px
  align-items: center
  font-size: 14px
  margin: 0 0 10px 60px
  
  img
    width: 16px
    height: 16px
    border-radius: 50%
      
  div:nth-child(2)
    position: relative
  
    &::before
      content: ""
      border-left: 2px solid var(--color-grey-lighter)
      border-top-left-radius: 6px
      border-top: 2px solid var(--color-grey-lighter)
      width: 33px
      height: 12px
      position: absolute
      transform: translate(calc(-100% - 24px), 6px)
    
    &:hover
      text-decoration: underline
    
  div:last-child
    color: #B5BAC1
    
    &:hover
      color: var(--color-text-white)

.pfp-container > img
  width: 40px
  border-radius: 50%
  cursor: pointer
  
  &:hover
    filter: drop-shadow(0px 4px 4px #00000028)
  
  &:active
    transform: translateY(1px)
    
  &.outline
    border: 2px solid #2B2B2E

.embed-content
  display: flex
  flex-direction: column
  align-items: flex-start

.name-row
  display: flex
  gap: 5px

.name
  color: var(--color-blue)
  cursor: pointer
  
  &:hover
    text-decoration: underline
  
.tag
  background-color: var(--color-blue)
  display: flex
  font-size: 10px
  fill: var(--color-text-white)
  align-items: center
  padding-right: 4px
  border-radius: 3px
  height: 16px
  
  > svg
    width: 15px
    height: 15px

  > div
    scale: 1 1.1
    
.embed
  padding: 8px 16px 16px 12px
  background-color: var(--color-grey-lighter)
  margin-top: 4px
  border-radius: 4px
  border-left: 4px solid var(--color-blue)
  font-size: 14px
  color: var(--color-discord-text)
  max-width: 484px
  box-shadow: var(--box-shadow)
  
  *
    white-space: pre-wrap
    overflow-wrap: anywhere
    line-height: 1.25em
  
  > div:first-child
    display: flex
    gap: 16px
    justify-content: space-between
  
.embed-title
  font-size: 16px
  margin-top: 8px
  font-weight: 600
  color: var(--color-text-white)
  padding: 2px 0
  display: block
  
  a&
    color: var(--color-blue-light)
    text-decoration: none
    
    &:hover
      text-decoration: underline

.embed-description
  margin-top: 8px
  padding: 1px 0

.embed-buttons
  margin-top: 8px
  display: flex
  gap: 8px

.embed-button
  background-color: var(--color-discord-button)
  border-radius: 3px
  display: flex
  align-items: center
  padding: 8px 20px
  gap: 4px
  transition: background-color .17s
  user-select: none
  cursor: pointer
  height: 16px
  font-size: 14px
  color: var(--color-text-white)
  text-decoration: none
  box-shadow: var(--box-shadow)
  
  &:hover
    background-color: var(--color-discord-button-hover)
    
  &:active
    background-color: var(--color-discord-button-active)
    
  > img
    width: 19.25px
    height: 19.25px
    
  > svg
    width: 16px
    height: 16px
    fill: var(--color-text-white)
    margin-left: 4px

.embed-button-blue
  background-color: var(--color-discord-button-blue)
  
  &:hover
    background-color: var(--color-discord-button-blue-hover)
    
  &:active
    background-color: var(--color-discord-button-blue-active)
    
.embed-button-green
  background-color: var(--color-discord-button-green)
  
  &:hover
    background-color: var(--color-discord-button-green-hover)
    
  &:active
    background-color: var(--color-discord-button-green-active)
    
.embed-button-red
  background-color: var(--color-discord-button-red)
  
  &:hover
    background-color: var(--color-discord-button-red-hover)
    
  &:active
    background-color: var(--color-discord-button-red-active)

.embed-fields
  display: flex
  gap: 8px
  flex-wrap: wrap
  margin-top: 12px

  > div
    flex-grow: 1

.embed-field-name
  font-weight: 600
  color: var(--color-text-white)
  padding: 1px 0
  margin-bottom: 4px
  
.embed-field-value
  padding: 1px 0
  
.embed-author
  margin-top: 8px
  font-size: 14px
  padding: 1px 0
  display: flex
  align-items: center
  gap: 8px
  color: var(--color-text-white)
  font-weight: 600
  
  img
    width: 24px
    height: 24px
    border-radius: 50%

.embed-footer
  margin-top: 8px
  font-size: 12px
  padding: 1px 0
  display: flex
  align-items: center
  gap: 8px
  
  img
    width: 20px
    height: 20px
    border-radius: 50%
  
.embed-image
  border-radius: 4px
  margin-top: 16px
  max-width: @css { min(400px, 100vw - 172px) }
  max-height: 300px
  cursor: pointer
  
.embed-thumbnail
  border-radius: 4px
  margin-top: 8px
  max-width: 80px
  max-height: 80px
  cursor: pointer
  
.ping
  background-color: var(--color-discord-ping)
  border-radius: 3px
  padding: 2px
  color: var(--color-discord-ping-text)!important
  cursor: pointer
  transition: background-color .05s, color .05s
  user-select: none
  
  &:hover
    background-color: var(--color-discord-ping-hover)
    color: var(--color-text-white)!important
    
.emoji
  width: 16px
  height: 16px
  margin-bottom: -4px
  
.timestamp
  padding 0 2px
  border-radius: 3px
  background-color: #4F515A
  
.listbar
  background-color: #4E5058
  height: 18px
  width: 4px
  border-radius: 4px
  display: inline-block
  margin: 0 12px -4px 0