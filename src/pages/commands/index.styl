.container
  max-width: var(--content-width)
  margin: 0 auto
  flex: 1
  display: flex
  min-height: calc(100vh - var(--header-height) * 2)

page-body
  background-image: linear-gradient(to right, var(--color-grey-darker) 50%, var(--color-grey) 50%)

#categories-container
  width: 148px
  position: fixed
  top: var(--header-height)
  left: calc(max(0px, (100vw - var(--content-width)) / 2))
  bottom: 0
  overflow-y: auto
  z-index: 200
  box-shadow: -5px 0 10px var(--color-box-shadow) inset

#categories
  display: flex
  flex-direction: column
  gap: 5px

  a
    text-decoration: none
    color: var(--color-text-white)
    text-transform: capitalize
    height: 40px
    padding: 0 10px
    display: flex
    align-items: center
    transition: background-color .15s
    font-weight: 700
    text-shadow: var(--text-shadow)
    
    &:hover
      background-color: var(--color-grey-light)
      
    > *
      transition: transform .15s

    &:active > *
      transform: translateY(3px)
      
    &#category-back
      height: 30px
      font-size: 0.9rem
      margin-top: 10px
      
      svg
        height: 20px
        width: 20px
        fill: white
        margin: 0 5px 0 -5px
        filter: drop-shadow(var(--text-shadow))
      
      &:active > svg
        transform: translateY(3px)

#category-title
  text-align: center
  padding: 20px 0
  font-size: 1.5rem
  font-weight: 700
  text-shadow: var(--text-shadow)
  
  &.subcategory-title
    font-size: 1.2rem

#main
  margin-left: 148px
  background-color: var(--color-grey)
  min-height: 100%
  flex: 1

#breadcrumbs
  position: fixed
  height: var(--header-height)
  background-color: var(--color-grey-dark)
  right: 0
  left: calc(max(0px, (100vw - var(--content-width)) / 2) + 148px)
  display: flex
  align-items: center
  padding: 0 10px
  box-shadow: var(--box-shadow)
  z-index: 1
  
  svg
    fill: var(--color-text-white)
    height: 20px
    width: 20px
    filter: drop-shadow(var(--text-shadow))
    
  a
    padding 0 10px
    height: var(--header-height)
    display: flex
    align-items: center
    color: var(--color-text-white)
    text-decoration: none
    font-weight: 700
    transition: background-color .15s
    text-shadow: var(--text-shadow)
    
    &:not(#command-breadcrumb)
      text-transform: capitalize
      
    &:hover
      background-color: var(--color-grey-light)
    
    > *
      transition: transform .15s

    &:active > *
      transform: translateY(3px)

#content
  padding: calc(var(--header-height) + 20px) 20px 20px

#commands
  display: flex
  flex-direction: column
  gap: 20px
  
  > a
    background-color: var(--color-grey-light)
    box-shadow: var(--box-shadow)
    padding: 20px
    color: var(--color-text-white)
    text-decoration: none
    transition: background-color .15s
    
    &:hover
      background-color: var(--color-grey-lighter)

.command-name
  font-size: 2rem
  font-weight: 700
  padding-bottom: 10px
  text-shadow: -3px 3px 1px var(--color-text-shadow)

#command-info
  display: inline-flex
  flex-direction: column
  align-items: flex-start

#command-back
  height: 30px
  font-size: 0.9rem
  color: var(--color-text-white)
  text-decoration: none
  font-weight: 700
  display: flex
  align-items: center
  padding: 5px 10px
  background-color: var(--color-grey-light)
  box-shadow: var(--box-shadow)
  transition: background-color .15s
  text-shadow: var(--text-shadow)
  
  svg
    height: 20px
    width: 20px
    fill: white
    margin: 0 5px 0 -5px
    filter: drop-shadow(var(--text-shadow))
  
  > *
    transition: transform .15s

  &:hover
    filter: brightness(1.2)

  &:active > *
    transform: translateY(3px)