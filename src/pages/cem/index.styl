@import "buttons.styl"

page-body
  background-color: var(--color-grey)

.container
  max-width: var(--content-width)
  margin: 0 auto
  flex: 1
  padding: 40px

#search
  display: flex
  align-items: center
  background-color: var(--color-grey-light)
  width: 168px
  position: relative
  padding-right: 10px
  height: var(--header-height)
  
  svg
    width: 32px
    height: 32px
    padding: 0 4px
    fill: var(--color-text-white)
    
  input
    position: absolute
    left: 40px
    border: none
    outline: none
    background-color: transparent
    height: 40px
    width: 128px
    font-size: 1.2rem
    padding: 0
    z-index: 1
  
    &::placeholder
      color: var(--color-grey-light)
      filter: brightness(2)

.entities
  display: flex
  flex-wrap: wrap
  gap: 4px

.entity
  width: 116px
  height: 66px
  flex: 1
  display: flex
  flex-direction: column
  align-items: center
  position: relative
  padding: 2px 2px 20px
  background-color: var(--color-grey-light)
  transition: background-color .15s
  cursor: pointer
  
  &:hover
    background-color: var(--color-blue)

  > div
    position: absolute
    bottom: 0
    left: 0
    right: 0
    text-align: center
    
  > img
    width: 116px
    height: 66px

.popup
  position: fixed
  top: var(--header-height)
  bottom: 0
  left: 0
  right: 0
  background-color: #00000080
  z-index: 1
  display: flex
  justify-content: center
  align-items: center
  animation: fadeIn .25s forwards 1
  opacity: 0

.popup-container
  width: 640px
  height: 480px
  background-color: var(--color-grey-light)
  max-height: calc(100vh - var(--header-height) * 3)
  overflow-y: auto
  padding: 20px 20px 0
  border-radius: 10px
  box-shadow: 0 8px 16px #000
  display: flex
  flex-direction: column

.popup-contents
  display: flex
  gap: 20px
  height: 100%

.entity-info
  flex: 1
  display: flex
  flex-direction: column
  gap: 20px
  
.entity-parts
  width: 100%
  flex: 1 1
  overflow-y: auto

  table
    width: 100%
    border-spacing: 0
    
    tr
      &:first-child
        position: sticky
        top: 0
        background-color: var(--color-grey-light)
    
      &:nth-child(2n)
        background-color: var(--color-grey)
    
    th
      text-align: left
      font-weight: 700
      text-shadow: var(--text-shadow)
      padding-bottom: 10px
      
    td
      padding: 2.5px 0 2.5px

.entity-name
  font-size: 2.5rem
  font-weight: 700
  text-shadow: -4px 4px 1px var(--color-text-shadow)

.entity-extras
  display: flex
  flex-direction: column
  gap: 10px

.entity-texture
  image-rendering: pixelated
  box-sizing: border-box
  border-width: 10px
  border-style: solid
  border-image: url("/assets/images/misc/border.webp") 3
  box-shadow: var(--box-shadow)
  
  img
    width: 256px
    background-image: url("/assets/images/misc/transparent_dark.webp")
    display: block

@keyframes fadeIn
  from
    opacity: 0
  to
    opacity: 1