@import "buttons.styl"

.container
  max-width: var(--content-width)
  margin: 0 auto
  flex: 1
  
#color-container
  display: flex
  flex-wrap: wrap
  justify-content: center

.colour
  min-width: 128px
  height: 128px
  flex: 1
  background-image: url("/assets/images/misc/transparent.webp")
  background-attachment: fixed
  cursor: pointer
  
  &:hover
    .hex
      border-color: var(--color-blue) !important

    .text
      opacity: 1
  
.hex
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  box-sizing: border-box
  border: 4px solid transparent
  transition: border .15s
  
.text
  opacity: 0
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.8), 0px 0px 2px rgba(0, 0, 0, 1)
  user-select: none
  
#text-copier
  position: fixed
  top: -100vh

#load-more
  justify-content: center
  padding: 40px
  display: none

@media only screen and (max-width: 768px)
  .text
    opacity: 1