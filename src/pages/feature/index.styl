@import "buttons.styl"

.container
  max-width: var(--content-width)
  margin: 0 auto
  padding: 20px
  display: flex

#content
  flex: 1
  
#title
  font-size: 2.75rem
  font-weight: 700
  margin: 30px 0 30px 60px
  position: relative
  text-shadow: -5px 5px 1px var(--color-text-shadow)
  
  &::before
    content: ""
    background-color: var(--color-blue)
    position: absolute
    top: 0
    bottom: 0
    left: -30px
    width: 10px
    border-radius: 5px

#commands
  background-color: var(--color-grey-light)
  box-shadow: var(--box-shadow)
  padding: 20px
  border-radius: 10px
  display: flex
  flex-direction: column
  gap: 16px
  align-items: center
  
  .button
    min-width: initial
  
#commands-title
  font-size: 1.75rem
  font-weight: 700


#command-tabs
  display: flex
  gap: 8px
  width: 100%
  margin-bottom: 10px

.command-tab
  text-transform: capitalize
  flex: 1
  background-color: var(--color-grey-lighter)!important
  transition: .15s filter
  
  &:hover
    filter: brightness(1.25)

.active
  background-color: var(--color-blue)!important
  
#command-lists
  width: 100%

.command-list
  height: 0
  overflow: hidden
  display: flex
  flex-direction: column
  gap: 8px

  a
    flex: 1

.selected
  height: initial
  overflow: initial