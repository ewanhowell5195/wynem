@import "buttons.styl"

page-body
  display: flex
  flex-direction: column

#banner
  position: relative
  overflow: clip
  box-shadow: var(--box-shadow)

.container
  width: @css { min(var(--content-width), 100vw) }
  margin: 0 auto

#banner-content
  position: absolute
  z-index: 1

#banner-image
  background-image: url("/assets/images/logo/wynem_banner.webp")
  background-position: 50% 50%
  background-size: cover
  height: 256px
  filter: blur(4px)
  
#title
  font-size: 2.75rem
  font-weight: 700
  margin: 30px 0 30px 60px
  position: relative
  text-shadow: -5px 5px 1px var(--color-text-shadow)
  
  &::before
    content: ""
    background-color: var(--color-blue)
    position: absolute
    top: 0
    bottom: 0
    left: -30px
    width: 10px
    border-radius: 5px

#subtitle
  margin: -20px 0 0 60px
  text-shadow: -3px 3px 1px var(--color-text-shadow)

#feature-content
  display: flex
  flex: 1

#content
  flex: 1
  padding: 20px

#sidebar
  margin: 20px
  background-color: var(--color-grey-light)
  box-shadow: var(--box-shadow)
  padding: 20px
  border-radius: 10px
  display: flex
  flex-direction: column
  gap: 16px
  align-items: center
  min-width: 300px

  .button
    min-width: initial
  
#commands-title
  font-size: 1.75rem
  font-weight: 700

#command-tabs
  display: flex
  gap: 8px
  width: 100%
  margin-bottom: 10px

.command-tab
  text-transform: capitalize
  flex: 1
  background-color: var(--color-grey-lighter)!important
  transition: .15s filter
  
  &:hover
    filter: brightness(1.25)

.active
  background-color: var(--color-blue)!important
  
#command-lists
  width: 100%

.command-list
  height: 0
  overflow: hidden
  display: flex
  flex-direction: column
  gap: 8px

  a
    flex: 1

.selected
  height: initial
  overflow: initial

.section
  display: flex
  flex-direction: column
  gap: 20px
  
  img
    object-fit: contain
    object-position: left

.heading
  font-size: 2rem
  font-weight: 700
  text-shadow: -3px 3px 1px var(--color-text-shadow)

.text
  white-space: pre-wrap
  
.tablelist
  td:not(:last-child)
    padding-right: 16px
  
  td:first-child
    font-weight: 600
    white-space: nowrap!important
    display: list-item
    list-style: inside